{% macro render(title, classes, image) %}
    <header>

        <div class="container header {{classes}}">

            <div class="img-cover" style="background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('{{image}}'); background-repeat: no-repeat; background-size: cover;">

                <nav class="primary">
                    <ul>
                        <div class="logo">
                            <a href="/">
                                <img src="/assets/logo-nav.png" alt="logo">
                            </a>
                        </div>
                        <div class="header--menu">
                            <div class="header--menu--links">
                                <li>
                                    <a href="/">
                                        Home
                                    </a>
                                </li>
                                <li>
                                    <a href="/">
                                        About
                                    </a>
                                </li>
                                <li>
                                    <a href="/">
                                        Recipes
                                    </a>
                                </li>
                                <li>
                                    <a href="/">
                                        Chefs
                                    </a>
                                </li>
                            </div>
                            <form class="search" action="/products/search" method="GET">

                                <input type="text" name="filter" placeholder="&#xF002;   Search for recipe..." {% if search.term %} value="{{search.term}}" {% endif %}>

                            </form>
                            <li class="dropdown-container">
                                <a href="/accounts">
                                    <i class="material-icons">account_circle</i>
                                </a>
                                {% if session.userId %}
                                    <ul class="dropdown">
                                        <li>
                                            <a href="/users">Minha conta</a>
                                        </li>
                                        <li>
                                            <a href="/users/ads">Meus an√∫ncios</a>
                                        </li>
                                        <li>
                                            <a href="/orders">Meus pedidos</a>
                                        </li>
                                        <li>
                                            <a href="/orders/sales">Minhas vendas</a>
                                        </li>
                                        <li>
                                            <form action="/users/logout" method="POST">
                                                <button>Sair</button>
                                            </form>
                                        </li>
                                    </ul>
                                {% endif %}

                                <li >
                                    <a href="/cart">
                                        <i class="material-icons">shopping_cart</i>
                                        {% if (session.cart) and (session.cart.total.quantity > 0) %}
                                            <span id="cart-status-info">{{ session.cart.total.quantity}}</span>
                                        {% endif %}
                                    </a>
                                </li>
                            </div>
                        </ul>
                    </nav>

                    <div class="cover-info">
                        <h1>{{title}}</h1>
                        <h3>Sam never gives up on his quest to get a good recipe</h3>
                    </div>

                </div>
                <div class="color-cover"></div>

            </div>

        </header>
    {% endmacro %}