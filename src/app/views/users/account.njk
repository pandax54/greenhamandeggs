{% extends "layout.njk" %}
{% import "../parts/header-cover.njk" as cover %}
{% import "../parts/form-card.njk" as form %}

{% block header %}
    <title>About</title>
{% endblock %}

{# {%include "parts/header.njk"%} #}

{% block content %}
    {# {% call cover.render('SETTINGS','', 'about', '', '../assets/about2.png' )%}
    {% endcall %} #}
    <header>

        <div class="container header {{classes}}">

            <div class="img-cover" style="background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6) ), url('../assets/about2.png'); background-repeat: no-repeat; background-size: cover;">

                {% include "parts/nav.njk" %}

                <div class="cover-info">
                    <h1>SETTINGS</h1>
                    {# <h3>Sam never gives up on his quest to get a good recipe</h3> #}
                </div>

            </div>
            <div class="color-cover"></div>

        </div>

    </header>

    {% call form.render("CHEF'S FORM", "chef-form account chef") %}

    <div class="row-1">
        <label class="label-form" for="name">
            <img src="../assets/chefs-icons/Group-1.png" alt="chef">
            <h2>Chef's Name</h2>
        </label>
        <input name="name" value="{{session.user.name}}" placeholder="{{session.user.name}}" type="text">
    </div>

    <div class="row-2">
        <div class="social-media email">
            <label class="label-form" for="email">
                <img src="../assets/chefs-icons/Vector.png" alt="chef">
                <h2>E-mail</h2>
            </label>
            <input name="email" value="{{session.user.email}}" placeholder="{{session.user.email}}" type="text">
        </div>
        <div class="social-media instagram">
            <label class="label-form" for="instagram">
                {# <img src="../assets/chefs-icons/Group-1.png" alt="chef"> #}
                <i class="fa fa-instagram" style="font-size:24px;color:#FF370A;opacity: 0.5; padding-left: 15px" aria-hidden="true"></i>
                <h2>Instagram</h2>
            </label>
            <input name="instagram" value="{{session.user.instagram}}" placeholder="{{session.user.instagram}}" type="text">
        </div>
        <div class="social-media twitter">
            <label class="label-form" for="twitter">
                {# <img src="../assets/chefs-icons/Group-1.png" alt="chef"> #}
                <i class="fa fa-twitter" style="font-size:24px;color:#FF370A;opacity: 0.5; padding-left: 15px" aria-hidden="true"></i>
                <h2>Twitter</h2>
            </label>
            <input name="twitter" value="{{session.user.twitter}}" placeholder="{{session.user.twitter}}" type="text">
        </div>
    </div>
    <div class="row-3">
        <div class="about">
            <label class="label-form" for="about">
                <img src="../assets/chefs-icons/Group.png" alt="chef">
                {# <i class="fa fa-twitter" style="font-size:24px;color:#FF370A;opacity: 0.5; padding-left: 15px" aria-hidden="true"></i> #}
                <h2>About</h2>
            </label>
            <textarea name="about" id="about" cols="30" rows="10" placeholder="{{session.user.about}}">{{session.user.about}}</textarea>
        </div>

        <div class="upload">
            <label class="label-form title" for="upload">
                <i class="fa fa-image" style="font-size:24px;color:#FF370A;opacity: 0.5; padding-left: 15px" aria-hidden="true"></i>
                <h2>Upload Profile Photo</h2>
            </label>
            <div class="upload-img profile-img" id="profile-image-div" style="background-image: url('{{session.user.profile_image}}')">
                <label class="label-form" for="upload">
                    <img src="../assets/recipe-icons-form/download.png" alt="chef">
                </label>
                <input id="profile-image" name="profile-image" type="file" accept="image/*" onchange="photoUpload.handleUploadProfile(event)">
            </div>
        </div>

    </div>
    <div class="row-1">
        <div class="social-media email">
            <label class="label-form" for="password">
                <img src="../assets/chefs-icons/Vector.png" alt="chef">
                <h2>Password</h2>
            </label>
            <input name="password" placeholder="Choose a password" type="password">
        </div>
        <div class="row-3">
            <div class="social-media email">
                <label class="label-form" for="passwordRepeat">
                    <img src="../assets/chefs-icons/Vector.png" alt="chef">
                    <h2>Repeat the Password</h2>
                </label>
                <input name="passwordRepeat" placeholder="Repeat the choosen password" type="password">
            </div>

        </div>
        <div class="form-btn">
            <button type="submit" class="post-btn" onclick="Validate.allFields(event)">Salvar</button>
            {# <a class="cancel-btn" href="/">Cancel</a> #}
        </div>

        <form id="form-delete" action="/users?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{user.id}}">
            <button class="cancel-btn delete" type="submit">Deletar conta</button>
        </form>

        {% endcall %}

    {% endblock %}

    {% block script %}
        {# <script src="/js/script.js"></script> #}
        <script src="/js/img-upload.js"></script>
    {% endblock %}