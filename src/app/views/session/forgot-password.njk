{% extends "../layout.njk" %}
{% import "../parts/header-cover.njk" as cover %}
{% import "../parts/form-card.njk" as form %}

{% block header %}
    <title>Users forgot password</title>
{% endblock %}

{% block content %}
    {% call cover.render('WELCOME GREEN HAM AND EGGS!','', 'about', '', '../assets/about2.png', session )%}
    {% endcall %}

    {% call form.render("LOGIN", "chef register_form") %}

    {# {% include "../parts/messages.njk" %} #}

    <form action="/users/forgot-password" method="POST">

        <div class="header">
            <h1>Recover Password</h1>
        </div>

        <div class="row-1">
            <label class="label-form" for="email">
                <img src="../assets/chefs-icons/Vector.png" alt="chef">
                <h2>E-mail</h2>
            </label>
            <input name="email" placeholder="Juliane Hale" type="text" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>

        <div class="action form-btn">
            <button class="save post-btn" type="submit">Send Email</button>
        </div>

    </form>

    {% endcall %}

    {# {% include "../parts/messages.njk" %} #}

{% endblock content %}

{% block script %}

    <script src="/js/scripts.js"></script>

{% endblock %}