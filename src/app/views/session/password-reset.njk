{% extends "../layout.njk" %}
{% import "../parts/header-cover.njk" as cover %}
{% import "../parts/form-card.njk" as form %}

{% block header %}
    <title>Users Index</title>
{% endblock %}
{% block content %}
    {% call cover.render('WELCOME GREEN HAM AND EGGS!','', 'about', '', '../assets/about2.png', session )%}
    {% endcall %}
    {% call form.render("LOGIN", " register_form") %}

    <form action="/users/password-reset" method="POST">

        <div class="header">
            <h1>Reset Password</h1>
        </div>

        {% include 'session/reset-fields.njk'%}

        <div class="action form-btn">
            <button class="save post-btn" type="submit">Reset Password</button>
        </div>

    </form>

    {% endcall %}

{% endblock content %}

{% block script %}

    <script src="/js/scripts.js"></script>

{% endblock %}